<% layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row mt-3 ">
        <h1 class="col-6 offset-3">signup on wanderlust</h1>
        <div class="col-6 offset-3">
            <form method="post" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type=" text" name="username" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">enter name here</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type=" text" name="email" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">enter email here</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input  name="password" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">enter password here</div>
                </div>
                <button class="btn btn-dark">submit</button>
            </form>
            </div>
            </div>

</body>